{
    "name": "dofinity/pelecard",
    "type": "library",
    "description": "PHP Library for integrating Pelecard based payments.",
    "keywords": ["PHP", "payment", "commerce"],
    "homepage": "http://dofinity.com/pelecard",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2.5 || ^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "authors": [
        {
            "name": "Peleg Rabinowitz",
            "email": "peleg@dofinity.com",
            "homepage": "https://github.com/dofinity"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pelecard\\": "src/Pelecard"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pelecard\\": "test/Pelecard"
        }
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "phpunit --whitelist src ./test"
    }
}
